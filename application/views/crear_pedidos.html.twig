{% extends "base.html.twig" %}

{% block body %}

<div class="row">
	<div class="large-12 columns">
		<h3>Crear un pedido</h3>
	</div>
</div>
<div class="row">
	<div class="large-8 columns">
		
	{% if pedido %}
		<div class="panel">
			<h5>Pedido para <u>{{ cliente }}</u></h5>
		</div>
		<table width="100%">
			<thead>
				<tr>
					<th width="10%">Cant.</th>
					<th width="70%">Nombre</th>
					<th width="10%">Precio</th>
					<th width="10%"></th>
				</tr>
			</thead>
			<tbody id="list-to-add">
				{% for val in productos %}
				<tr data-id="{{ val.id }}">
					<td>{{ val.cantidad }}</td>
					<td>{{ val.nombre }}</td>
					<td>${{ val.precio|number_format(2, '.', ',') }}</td>
					<td>
					{% if pd_agregados %}
						{% for value in pd_agregados if val.id == value.id_producto %}
							<input type="number" class="postfix" value="{{ value.cantidad }}" disabled="disabled">
						{% else %}
							<button class="button tiny postfix fi-plus"></button>
							<input type="number" class="postfix" style="display:none;">
						{% endfor %}
					{% else %}
					<button class="button tiny postfix fi-plus"></button>
					<input type="number" class="postfix" style="display:none;">
					{% endif %}

					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

		<ul class="pagination">
			{% autoescape false %}
			{{ pagination }}
			{% endautoescape %}
		</ul>
	{% else %}
		<div class="panel">
			<form action="" method="post">
				<div class="row">
					<div class="large-4 columns">
						<select name="ruta" id="rutap">
							<option>Seleccione una ruta</option>
							{% for val in rutas %}
							<option value="{{ val.id }}">{{ val.nombre }}</option>
							{% endfor %}
						</select>
					</div>
					<div class="large-6 columns">
						<select name="cliente" id="clientep">
							<option>Seleccione un cliente</option>
						</select>
					</div>
					<div class="large-2 columns">
						<button type="submit" id="crear-pedido" class="button postfix fi-page-add"> Crear</button>
					</div>
				</div>
			</form>
		</div>
	{% endif %}
	</div>
	<div class="large-4 columns">
		<div id="search" class="panel">

			<h5>Opciones</h5>
			
			{% if pedido %}
				<hr>
				<p><strong>Total:</strong> <span id="psubtotal"></span> - <span id="pdescuento">3</span>% = <span id="ptotal"></span></p>
			{% else %}
			{% endif %}
		</div>
	</div>
</div>

{% endblock %}